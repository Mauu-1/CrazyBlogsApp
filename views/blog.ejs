


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<%- include("partials/header.ejs") %>
<div  class="section_our_solution">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="our_solution_category">
          <div class="solution_cards_box">
              <% if (postMade) { %>
                <% posts.forEach(function(post) { %>
                    <%- post.htmlContent1 %>
                    <h3><%= post.titleText; %> </h3>
                    </div>
                    <div class="solu_description">
                      <p>
                        <%= post.postInfo %> <br/>
                        
                      </p>
                      <p>
                        <%= post.date %> <br/>
                        
                      </p>
                      <div class="buttonsClass">
                        <form action="/editPost" method="POST">
                        <input type="hidden" name="postId" value="<%= post.uniqueId %>">
                        <button type="submit" class="read_more_btn edit">Edit Post</button>
                    </form>
                      <form action="/delete-post" method="POST">
                        <input type="hidden" name="postId" value="<%= post.uniqueId %>">
                        <button type="submit" class="read_more_btn delete">Delete Post</button>
                    </form>
                      </div>
                      
                      
                    
                      </div>
                    </div>
                    <!--  post.htmlContent2 -->
                <% }) %>
            <% } else { %>
                
                <div class="container empty">
                  <p class="noPost">No posts yet!</p>
                  <p class="postImg"><img class="smallImg" src="Assets/post.png" alt="post icon"></p>
                </div>
            <% } %>
              
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include("partials/footer.ejs") %>
  